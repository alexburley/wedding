style.
  .footer-link {
    font-size: 10px;
    font-weight: bold;
  }

  .blocker {
    height: 60px;
  }

  .footer-content {
    max-width: 400px;
    margin: auto;
  }

  .footer {
    background-color: #f5f5f5;
    text-align: center;
    height: 60px;
    line-height: 60px;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
  }

  @media (min-width: 768px) {
    .footer-link {
      font-size: 14px;
    }
  }
