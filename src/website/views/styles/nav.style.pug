style.
  .header {
    padding-bottom: 50px;
  }

  .navbar {
    position: sticky;
    top: 0;
  }

  .nav {
    margin: auto;
  }

  .divider {
    width: 100%;
    display: block;
  }

  .nav span {
    display: inline-block;
    vertical-align: middle;
  }

  .nav-item {
    vertical-align: middle;
    font-size: 20px;
    font-weight: 500;
    text-align: center;
  }

  .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 25px;
  }

  .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    cursor: pointer;
    font-size: 1em;
  }
