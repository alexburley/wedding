style.
  .banner {
    padding-top: 25px;
    background-color: #ffffff;
    text-align: center;
    margin: auto;
  }

  .banner-title {
    display: inline-block;
    margin: auto;
    text-align: center;
  }

  .banner-img {
    max-width: 250px;
    display: inline-block;
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: #ffffff;
    border-bottom: 1px solid lightgray;
  }

  .nav {
    margin: auto;
    padding-top: 20px;
    padding-bottom: 5px;
    line-height: 20px;
    font-weight: 500;
    font-size: 16px;
  }

  @media (min-width: 768px) {
    .nav {
      font-size: 20px;
    }
  }

  .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 25px;
  }

  .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    cursor: pointer;
    font-size: 1em;
  }
