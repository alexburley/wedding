style.
  .banner {
    padding-top: 50px;
    background-color: #ffffff;
  }

  .banner h1 {
    margin: 0;
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 10;
    background-color: #ffffff;
    border-bottom: 1px solid lightgray;
  }

  .nav {
    margin: auto;
    padding-bottom: 5px;
  }

  .nav span {
    display: inline-block;
    vertical-align: middle;
  }

  .nav-item {
    vertical-align: middle;
    font-size: 20px;
    font-weight: 500;
    text-align: center;
  }

  .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 25px;
  }

  .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    cursor: pointer;
    font-size: 1em;
  }
