style.
  .banner {
    padding-top: 25px;
    text-align: center;
    margin: auto;
    background-color: #faf9f6;
  }

  .banner-title {
    display: inline-block;
    margin: auto;
    text-align: center;
  }

  .banner-img {
    max-width: 250px;
    display: inline-block;
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 1px solid lightgray;
    background-color: #faf9f6;
  }

  .nav {
    margin: auto;
    padding-top: 20px;
    padding-bottom: 5px;
    line-height: 20px;
    font-weight: 500;
    font-size: 16px;
    height: 7.5vh;
  }

  @media (min-width: 768px) {
    .nav {
      font-size: 20px;
    }
  }

  .nav-item {
    text-align: center;
  }

  .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 25px;
  }

  .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    cursor: pointer;
    font-size: 1em;
  }

.banner.row.flex-nowrap
  .col.banner-img-container.d-none.d-md-block
    img.banner-img(
      src="https://wedding-website-images-burlzad.s3.eu-west-2.amazonaws.com/images/flowers-left.png"
    ) 
  .col.banner-title 
    h1.title Rebecca & Alex
    h3 Healey Barn | July 23rd 2022
  .col.banner-img-container.d-none.d-md-block
    img.banner-img(
      src="https://wedding-website-images-burlzad.s3.eu-west-2.amazonaws.com/images/flowers-right.png"
    ) 
.header
  .navbar 
    .nav
      .row
        .col.nav-item
          a(href="/") Home
        .col.nav-item
          a(href="/travel") Travel and Accomodation
        .col.nav-item
          a(href="/registry") Questions
        .col.nav-item
          a(href="/rsvp") RSVP
        .col.nav-item
          form.inline(method="post", action="/logout")
            button.link-button(type="submit", name="submit", value="submit") Logout
