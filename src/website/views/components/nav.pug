style.
  .banner {
    padding-top: 25px;
    text-align: center;
    margin: auto;
    background-color: #faf9f6;
  }

  .banner-title {
    display: inline-block;
    margin: auto;
    text-align: center;
  }

  .banner-img {
    max-width: 250px;
    display: inline-block;
  }

  .header {
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 1px solid lightgray;
    background-color: #faf9f6;
  }

  .nav {
    line-height: 100%;
    font-weight: 700;
    font-size: 16px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 30px 40px;
    padding-bottom: 0px;
    flex-wrap: nowrap;
    width: 100%;
    gap: 12px;
  }

  @media (max-width: 400px) {
    .nav {
      font-size: 12px;
    }
  }

  @media (min-width: 768px) {
    .nav {
      font-size: 20px;
    }
  }

  .nav-item {
    text-align: center;
    flex: 1 1 20px;
  }

  .nav .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 25px;
  }

  .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    font-weight: 700;
    cursor: pointer;
    font-size: 1em;
  }

.banner.row.flex-nowrap
  .col.banner-img-container.d-none.d-md-block
    img.banner-img(
      src="https://wedding-website-images-burlzad.s3.eu-west-2.amazonaws.com/images/flowers-left.png"
    ) 
  .col.banner-title 
    h1.title Rebecca & Alexander
    h3 Healey Barn | July 23rd 2022
