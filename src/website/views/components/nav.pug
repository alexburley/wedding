  .nav-items
    .nav-item
      a(href="/", class=travel || questions || registry || photos ? '' : 'active') Home
    .nav-item
      a(href="/travel", class=travel && 'active') Travel and Accomodation
    .nav-item
      a(href="/questions", class=questions && 'active') Questions
    .nav-item
      a(href="/registry", class=registry && 'active') Registry
    .nav-item
      a(href="/photos", class=photos && 'active') Photos
    .nav-item
      form.inline(method="post", action="/logout")
        button.link-button(type="submit", name="submit", value="submit") Logout
