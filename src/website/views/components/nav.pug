style.
  .banner {
    padding-top: 25px;
    text-align: center;
    margin: auto;
  }

  .banner-title {
    display: inline-block;
    margin: auto;
    text-align: center;
    line-height: 110%;
  }

  .sticky-header {
    position: sticky;
    top: 0;
    z-index: 10;
    border-bottom: 1px solid lightgray;
  }

  .scrolled {
    background-color: hsla(0, 0%, 50%, 0.5);
    transition: background-color 200ms linear;
  }

  .nav-items {
    line-height: 100%;
    font-weight: 700;
    font-size: 16px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem 1rem;
    flex-wrap: nowrap;
    width: 100%;
    gap: 12px;
  }

  @media (max-width: 400px) {
    .nav-items {
      font-size: 12px;
    }
  }

  @media (min-width: 768px) {
    .nav-items {
      font-size: 20px;
    }
  }

  .nav-item {
    text-align: center;
    flex: 1 1 20px;
  }

  .active {
    border-bottom: solid #228b22 3px;
  }

  .nav-item a {
    padding-bottom: 2px;
    display: inline-block;
  }

  .nav-items .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 25px;
  }

  .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    font-weight: 700;
    cursor: pointer;
    font-size: 1em;
  }

.banner
  .banner-title 
    h1(style="line-height: 110%") Rebecca & Alexander
