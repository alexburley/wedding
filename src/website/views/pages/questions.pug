style.
  .btn-link {
    color: black;
  }

  .btn-link:hover {
    color: #228b22;
    text-decoration: none;
    font-weight: bold;
  }

  .btn-link:hover {
    color: #228b22;
    text-decoration: none;
    font-weight: bold;
  }

  .btn-link:active {
    color: #228b22;
    text-decoration: none;
    font-weight: bold;
  }

  .btn-link:focus {
    color: #228b22;
    text-decoration: none;
    font-weight: bold;
  }

  .accordion-container {
    margin: auto;
  }
  .question {
    font-size: 1.5rem;
  }

.section-container
  .col-md-8.accordion-container
    h3(style="text-align: center") Questions
    br
    #accordion
      each faq, index in faqs
        .card
          .card-header(id='heading' + index)
            h5.mb-0
              button.btn.btn-link(
                data-toggle="collapse",
                data-target='#collapse' + index,
                aria-expanded="true",
                aria-controls='collapse' + index
              )
                .question
                  | #{faq.question}
          .collapse(
            id='collapse' + index,
            aria-labelledby='heading' + index,
            data-parent="#accordion"
          )
            .card-body
              | #{faq.answer}
