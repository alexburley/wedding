style.
  .home-itinerary,
  .home-aboutus {
    margin: 30px auto;
  }

  .home-itinerary-address p {
    font-weight: 500;
    margin: 0;
  }

  .home-itinerary {
    padding: 16px 8px;
  }

  .home-card {
    max-width: 60%;
  }

  @media (max-width: 400px) {
    .home-card {
      max-width: 80%;
    }
  }

  .home-itinerary .home-address-title {
    font-size: 2rem;
    letter-spacing: 0.03em;
    line-height: 110%;
    padding-bottom: 10px;
  }

  .home-itinerary-wrapper {
    display: flex;
    flex-direction: column;
    max-width: 300px;
    margin: auto;
  }

  .home-itinerary-slot {
    display: flex;
    text-align: left;
    flex-grow: 1;
    gap: 50px;
    margin: 10px 0;
    line-height: 125%;
  }

  .home-aboutus-img-container {
    margin: auto;
    margin-top: 20px;
  }

  .home-aboutus-img {
    width: 95%;
    max-width: 400px;
  }

  .home-heroimage-card {
    padding: 0;
    margin: 20px auto;
  }
  .home-heroimage {
    max-width: 100%;
  }
.container
  .content-card.home-heroimage-card.home-card 
    img.home-heroimage(
      src="https://wedding-website-images-burlzad.s3.eu-west-2.amazonaws.com/images/healey-door.jpg"
    )
  .content-card.home-itinerary.home-card 
    p(style="max-width: 90%; margin: auto; padding-bottom: 20px") We have invited you to join us in celebration of our Wedding at Healey Barn
    h4 Order of the day
    .home-itinerary-wrapper
      each event in itinerary
        .home-itinerary-slot
          span(style="padding-left: 16px") #{event.slot}
          span #{event.label}
    hr
    .home-itinerary-address
      p.home-address-title Healey Barn
      p Healey
      p Riding Mill
      p Northumberland
      p NE44 6BN
  .content-card.home-heroimage-card.home-card 
    img.home-heroimage(
      src="https://wedding-website-images-burlzad.s3.eu-west-2.amazonaws.com/images/healey-window.jpg"
    )
  .content-card.home-aboutus.home-card
    h4 About Us
      .home-aboutus-img-container
        img.home-aboutus-img(
          src="https://wedding-website-images-burlzad.s3.eu-west-2.amazonaws.com/images/party-pic.jpeg"
        )
    p(style="padding-top: 10px") Hey! We got engaged on 28th December 2020 and we're delighted to finally be able to send the invites out!
