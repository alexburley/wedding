style.
    body {
    padding-top: 50px;
    font: 14px 'Cormorant', "Lucida Grande", Helvetica, Arial, sans-serif;
    }

    a {
    color: black;
    }
    form {
    display: block;
    }

    .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: 0 auto;
    }
    .form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
    }

    .form-control {
    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
    }

    .nav span {
    display: inline-block;
    vertical-align: middle;
    }

    .nav-item {
    vertical-align: middle;
    font-size: 20px;
    font-weight: 500;
    text-align: center;
    }

    .title {
    text-align: center;
    font-weight: 500;
    font-size: 60px;
    padding-bottom: 20px;
    }

    .image-container {
    text-align: center;
    padding-top: 25px;
    }

    .image-container img {
    padding-right: 15px;
    padding-left: 15px;
    }

    .footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60px;
    line-height: 60px;
    background-color: #f5f5f5;
    }

    .inline {
    display: inline;
    }

    .link-button {
    background: none;
    border: none;
    color: black;
    text-decoration: none;
    cursor: pointer;
    font-size: 1em;
    }

    .main {
        padding: 20px
    }

    .home-invite {
        background-color: #cfffd9;
        text-align: center;
        padding: 20px;
        margin: auto;
    }

    .home-invite-address {
        font-style: oblique
    }
