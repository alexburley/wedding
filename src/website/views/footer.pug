style.
  .footer-link {
    font-size: 10px;
    font-weight: bold;
    padding: 0px 5px 0px 5px;
  }

  .blocker {
    height: 60px;
  }

  .footer-content {
    max-width: 600px;
    margin: auto;
  }

  .footer {
    background-color: #f5f5f5;
    border-top: 1px solid #d3d3d3;
    text-align: center;
    height: 60px;
    line-height: 60px;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
  }

  @media (min-width: 768px) {
    .footer-link {
      font-size: 16px;
    }
  }

.blocker
  footer.footer
    .container
      .row.footer-content 
        .col.text-muted.footer-link
          a(href="/#invite") Invite
        .col.text-muted.footer-link
          a(href="/#venue") Venue
        .col.text-muted.footer-link 
          a(href="/#accomodation") Accomodation
        .col.text-muted.footer-link 
          a(href="/#taxis") Taxis
        .col.text-muted.footer-link
          a(href="/#contact") Contact Us
